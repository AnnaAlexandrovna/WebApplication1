@model WebApplication1.Models.GroupModel
@{
    Layout = "_DefaultLayout";
}


    @using (Html.BeginForm())
    {
        <p>
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </p>

        <p>
            @Html.LabelFor(m => m.NumOfStudents)
            @Html.TextBoxFor(m => m.NumOfStudents, null, htmlAttributes: new { @type = "number" })
            @Html.ValidationMessageFor(m => m.NumOfStudents)
        </p>

        <input type="submit" value="Create" />
    }
